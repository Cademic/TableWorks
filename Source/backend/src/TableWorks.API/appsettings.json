{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=asidenote;Username=postgres;Password=REPLACE_OR_USE_DB_PASSWORD_ENV"
  },
  "Jwt": {
    "Issuer": "ASideNote",
    "Audience": "ASideNote.Client",
    "Secret": "REPLACE_WITH_LONG_RANDOM_SECRET_OR_JWT_SECRET_ENV",
    "AccessTokenMinutes": 60
  },
  "Admin": {
    "AllowedEmails": []
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": "Information",
    "WriteTo": [ { "Name": "Console" } ],
    "Enrich": [ "FromLogContext" ]
  },
  "Database": {
    "ApplyMigrationsOnStartup": false
  },
  "AllowedHosts": "*"
}
